<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Text</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note._id %></td>
        <td><%= note.title %></td>
        <td><%= note.text %></td>
        <td><%= note.image %></td>
        <td><%= link_to 'Show', note_path(note, :_id => note._id) %></td>
        <td><%= link_to 'Edit', edit_note_path(note), :params => {:_id => note._id} %></td>
        <td><%= link_to 'Destroy', note_path(note, :_id => note._id), remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
