<!DOCTYPE html>
<html>
<head>
 <title>Notes app</title>

 <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
 <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 <%= csrf_meta_tags %>
</head>

<body class="default_backround">
<% if session[:user]==true %>
   <body class="default_backround">

    <div class="header">
      <% if logged_in? %>
        <h3 class="user-name"><%= current_user.username %></h3>
      <%end%>
        <img class="avatar" src="https://jesusmaestro.escuelateresiana.com/wp-content/uploads/2015/03/user-default.png">
      
    </div>
        <ul class="socials">
             <li>
                <a href="email">email</a>
             </li>
            
             <li>
                <a href="facebook">facebook</a>
             </li>
            
             <li>
                <a href="twitter">twitter</a>
             </li>

             <li> 
                <%= link_to 'Notes', notes_path %>   
             </li>

        </ul>
<%end%>

<% if session[:admin]==true %>
   <body class="default_backround">

      <div class="header">
         <% if logged_in? %>
            <h3 class="user-name"><%= current_user.username %></h3>
         <%end%>
         <img class="avatar" src="https://jesusmaestro.escuelateresiana.com/wp-content/uploads/2015/03/user-default.png">  
      </div>
        <ul class="socials">
            <li>
            <a href="email">email</a>
            </li>
        
            <li>
            <a href="facebook">facebook</a>
            </li>
        
            <li>
            <a href="twitter">twitter</a>
            </li>

            <li> 
            <%= link_to 'Notes', index_note_path %>   
            </li>

            <li> 
            <%= link_to 'Users', index_users_path %>   
            </li>
         </ul>
    
<% end %>

    <%= yield %>
</body>
</html>



