<!DOCTYPE html>
<html>
   <head>
      <title>Notes app</title>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <%= csrf_meta_tags %>
   </head>
   <body class="default_backround" style>
      <% if session[:type]=="USER" || session[:type]=="ADMIN" %>
         <div>
            <div class="header">
               <img class="avatar" src="https://jesusmaestro.escuelateresiana.com/wp-content/uploads/2015/03/user-default.png">
               <p class="user-name"><%= session[:user_id] %><p>
            </div>
            <ul class="socials">
               <% if session[:type] == "ADMIN" %>
                  <li>
                     <%= link_to 'New Note', new_note_path(:user => session[:user_id]) %>
                  </li>
                  <li> 
                     <%= link_to 'Notes', notes_path %>   
                  </li>
                  <li>
                     <%= link_to 'Users', users_path %>   
                  </li>
                   <li> 
                     <%= link_to 'My Collections', notecollectionsUser_path(:user => session[:user_id]) %>   
                  </li>
               <% else %>
               <li>
                     <%= link_to 'New Note', new_note_path(:user => session[:user_id]) %>
                  </li>
                  <li> 
                     <%= link_to 'My Notes', notesUser_path(:user => session[:user_id]) %>   
                  </li>
                  <li> 
                     <%= link_to 'My Collections', notecollectionsUser_path(:user => session[:user_id]) %>   
                  </li>
                   <!--li> 
                     <%= link_to 'My Collections', notecollections_path(:user => session[:user_id]) %>   
                  </li-->
               <% end %>
               <li> 
                  <%= link_to 'Logout', logout_path, method: :delete %>   
               </li>
            </ul>
      <% else %>
         <div style="margin: auto; width: 40%">
      <% end %>         
      <%= yield %>
      </div>
   </body>
</html>
