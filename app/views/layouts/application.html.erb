<!DOCTYPE html>
<html>
   <head>
      <title>Notes app</title>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
      <%= csrf_meta_tags %>
   </head>
   <body class="default_backround" style>
      <% if session[:type]!="USER" && session[:type]!="ADMIN" %>
         <div style="margin: auto; width: 40%">
      <% else %>
         <div>
      <% end %>
         <% if session[:type]=="USER" || session[:type]=="ADMIN" %>
            <div class="header">
               <img class="avatar" src="https://jesusmaestro.escuelateresiana.com/wp-content/uploads/2015/03/user-default.png">  
            </div>
            <ul class="socials">
               <li> 
                  <%= link_to 'Notes', notes_path %>   
               </li>
               <% if session[:type] == "ADMIN" %>
                  <li>
                     <%= link_to 'Users', users_path %>   
                  </li>
               <% end %>
               <li> 
                  <%= link_to 'Logout', logout_path, method: :delete %>   
               </li>
            </ul>
         <% end %>         
         <%= yield %>
      </div>
   </body>
</html>